{
	":insert-screen": {
		"label": "t__Screen",
		"description": "t__Contains or refers to a textual representation of a computer screen or user interface window.",
		"alternatives": [
			":_convert-screen",
			":_insert-screen"
		]
	},
	":_convert-screen": {
		"steps": [
			{
				"type": "transform/setContextNodeIdToSelectionAncestor",
				"data": {
					"selectionAncestorNodeSpec": "self::p or self::pre"
				}
			},
			{
				"type": "operation/wrap-selection-or-container-in-structure",
				"data": {
					"childNodeStructure": [
						"screen",
						[{ "bindTo": "selection.start", "empty": true }],
						[{ "bindTo": "transclude", "multiple": true, "required": false }],
						[{ "bindTo": "selection.end", "empty": true }]
					],
					"contextNodeId": "{{contextNodeId}}"
				}
			}
		]
	},
	":_insert-screen": {
		"steps": {
			"type": "operation/vertical-insert",
			"data": {
				"childNodeStructure": [
					"screen",
					[{ "bindTo": "selection", "empty": true }]
				]
			}
		}
	},
	":contextual-unwrap-screen": {
		"label": "t__Unwrap screen",
		"description": "t__Remove the screen but preserve its content.",
		"steps": [
			{
				"type": "operation/convert-element",
				"data": {
					"nodeNames": ["p"]
				}
			}
		]
	}
}
